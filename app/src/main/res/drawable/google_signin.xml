<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#D26565" />
            <gradient android:angle="-90" android:startColor="#DC4C40" android:endColor="#DC4C40"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#DC4C40" />
            <solid android:color="#DC4C40"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#DC4C40" />
            <gradient android:angle="-90" android:startColor="#DC4C40" android:endColor="#DC4C40" />
        </shape>
    </item>
</selector>